{
	"manifest_version": 3,
	"name": "Tabla de Tipos Pokémon",
	"version": "1.0",
	"description": "Una extensión que proporciona una tabla de tipos Pokémon.",
	"permissions": ["activeTab"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icon.png",
			"48": "icon.png",
			"128": "icon.png"
		}
	},
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"host_permissions": ["https://pokeapi.co/api/v2/*"]
}
